{
  "enabled": true,
  "name": "Japanese Conversation Enforcer",
  "description": "Monitors all file changes and ensures any AI responses or conversations are conducted in Japanese",
  "version": "1",
  "when": {
    "type": "fileEdited",
    "patterns": [
      "**/*"
    ]
  },
  "then": {
    "type": "askAgent",
    "prompt": "必ず日本語で会話してください。ファイルの変更を検出しました。すべての応答とコミュニケーションは日本語で行ってください。"
  }
}